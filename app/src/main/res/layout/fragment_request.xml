<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#A3A3A3"
        android:orientation="vertical">
 <LinearLayout
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:orientation="vertical"
     android:layout_margin="15dp">
        <TextView
            android:id="@+id/textView14"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50dp"
            android:textColor="#FF0000"
            android:text="'잘못된 정보'를 알려주세요!"
            android:fontFamily="@font/nanumsquareroundeb"/>

        <TextView
            android:id="@+id/textView15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/nanumsquareroundeb"
            android:text="미처 저희의 손이 닿지 않은 곳엔 여러분의 도움이 필요해요!\n\n\n\n카테고리, 제품명, 전성분 등\n잘못 등록된 정보를 말씀해주시면\n빠르게 수정하도록 하겠습니다." />


     <EditText
         android:id="@+id/et_request_title"
         android:layout_width="match_parent"
         android:layout_height="45dp"
         android:ems="10"
         android:gravity="start|top"
         android:fontFamily="@font/nanumsquareroundb"
         android:hint="제목을 입력해주세요"
         android:background="@color/white"
         android:layout_marginBottom="20dp"
         android:inputType="textMultiLine" />

     <EditText
         android:id="@+id/et_request_contents"
         android:layout_width="match_parent"
         android:layout_height="184dp"
         android:fontFamily="@font/nanumsquareroundb"
         android:hint="내용을 입력해주세요"
         android:ems="10"
         android:background="@color/white"
         android:gravity="start|top"
         android:inputType="textMultiLine"
         android:layout_marginBottom="20dp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_request"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bin_red2"
            android:textColor="@color/white"
            android:fontFamily="@font/nanumsquareroundeb"
            android:text="분석 요청하기" />
    </LinearLayout>
    </LinearLayout>
</FrameLayout>