<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="240dp"
    android:layout_height="match_parent"
    android:layout_gravity="start"
    android:background="#B5F1E4E4"
    android:id="@+id/drawer"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#DDFF2B2B">

        <TextView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="메뉴"
             android:layout_margin="10dp"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:fontFamily="@font/nanumsquareroundeb">
        </TextView>

    </LinearLayout>
    <TextView
        android:id="@+id/tv_help"
        android:drawableLeft="@drawable/ic_baseline_help_24"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:gravity="center"
        android:text="도움말"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:fontFamily="@font/nanumsquareroundr"/>
    <TextView
        android:id="@+id/menutv_announcement"
        android:drawableLeft="@drawable/ic_baseline_campaign_24"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:gravity="center"
        android:text="공지사항"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:fontFamily="@font/nanumsquareroundr"/>
    <TextView
        android:id="@+id/menutv_request"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_baseline_insert_comment_24"
        android:layout_margin="5dp"
        android:gravity="center"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:text="문의 하기"
        android:fontFamily="@font/nanumsquareroundr"/>
    <TextView
        android:id="@+id/menutv_inquiry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_baseline_content_paste_search_24"
        android:layout_margin="5dp"
        android:textColor="@color/black"
        android:gravity="center"
        android:textSize="20sp"
        android:text="수정 요청"
        android:fontFamily="@font/nanumsquareroundr"/>

    <TextView
        android:id="@+id/menutv_set"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_baseline_settings_24"
        android:gravity="center"
        android:textColor="@color/black"
        android:layout_margin="5dp"
        android:textSize="20sp"
        android:text="설정"
        android:fontFamily="@font/nanumsquareroundr"/>




</LinearLayout>