<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:padding="2dp"
    android:weightSum="10"
    android:layout_margin="20dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/nanumsquareroundb"
        android:gravity="right"
        android:text="xxxx-xx-xx"
        android:textColor="@color/black">

    </TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:padding="5dp"
            android:fontFamily="@font/nanumsquareroundb"
            android:textColor="@color/black"
            android:textSize="14dp"
            android:text="ID"></TextView>
        <TextView
            android:id="@+id/reviewUserid"
            android:textSize="14dp"
            android:layout_width="196dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:padding="5dp"
            android:text="no data"

            android:fontFamily="@font/nanumsquareroundb"
            android:textColor="@color/black"
            />

        <TextView
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:padding="5dp"
            android:textColor="@color/black"
            android:fontFamily="@font/nanumsquareroundb"
            android:textSize="14dp"
            android:text="별점"></TextView>

        <TextView
            android:id="@+id/reviewRate"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
           android:gravity="end"
            android:fontFamily="@font/nanumsquareroundb"
            android:textSize="14dp"
            android:padding="5dp"
            android:textColor="@color/black"
            android:text="x"
            ></TextView>
        <TextView
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:padding="5dp"
            android:textColor="@color/black"
            android:fontFamily="@font/nanumsquareroundb"
            android:textSize="14dp"
            android:text="/5"></TextView>
    </LinearLayout>
    <TextView
        android:id="@+id/reviewProduct"
        android:text="reviewProduct"
        android:textColor="#515151"
        android:textSize="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </TextView>
    <TextView
        android:id="@+id/reviewReview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="empty"
        android:textSize="14dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:fontFamily="@font/nanumsquareroundeb"
        android:padding="5dp"
        ></TextView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#D8D8D8">
    </LinearLayout>
</LinearLayout>