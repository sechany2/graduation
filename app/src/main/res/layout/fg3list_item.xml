<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/fg3_iv"
            android:layout_width="80dp"
            android:layout_height="130dp"
            android:layout_margin="5dp"
            android:src="@drawable/ic_launcher_foreground"
            android:background="@drawable/square_background_border_black"
            android:padding="2dp">
        </ImageView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/fg3list_tv_pd_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="브랜드"
                android:textSize="12dp"
                android:ellipsize="end"
                android:maxLines="1"></TextView>

            <TextView
                android:id="@+id/fg3list_tv_pd_brandname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="제품이름"
                android:layout_margin="5dp"></TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <RatingBar
                        android:id="@+id/fg3_usrb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/Widget.AppCompat.RatingBar.Indicator"
                        android:scaleX="0.8"
                        android:scaleY="0.8"
                        android:progressTint="#E6FFEB3B"
                        android:secondaryProgressTint="#00FFFFFF" ></RatingBar>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="나의 예상 별점"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="5dp"/>
                    <TextView
                        android:id="@+id/fg3_usrb_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="점수"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <RatingBar
                        android:id="@+id/fg3_pdrb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/Widget.AppCompat.RatingBar.Indicator"
                        android:scaleX="0.7"
                        android:scaleY="0.7"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="제품 별점"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="5dp"/>
                    <TextView
                        android:id="@+id/fg3_pdrb_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="점수"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"/>

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="#D8D8D8">
    </LinearLayout>
</LinearLayout>