<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/fg3_iv"
            android:layout_width="80dp"
            android:layout_height="130dp"
            android:layout_margin="5dp"
            android:src="@drawable/ic_launcher_foreground"
            android:background="@drawable/square_background_border_black"
            android:padding="2dp">
        </ImageView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/fg3list_tv_pd_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:text="브랜드"
                android:fontFamily="@font/nanumsquareroundb"
                android:textColor="@color/black"
                android:textSize="12dp"
                android:ellipsize="end"
                android:maxLines="1"></TextView>

            <TextView
                android:id="@+id/fg3list_tv_pd_brandname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="제품이름"
                android:fontFamily="@font/nanumsquareroundb"
                android:textColor="@color/black"
                android:layout_margin="2dp"></TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:src="@drawable/ratestar"></ImageView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="나의 예상 별점"
                        android:textColor="@color/black"
                        android:fontFamily="@font/nanumsquareroundb"
                        android:layout_gravity="center"
                        android:layout_marginTop="0dp"
                        android:layout_marginLeft="5dp"/>
                    <TextView
                        android:id="@+id/fg3_usrb_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="점수"
                        android:textColor="@color/black"
                        android:fontFamily="@font/nanumsquareroundeb"
                        android:layout_gravity="center"
                        android:layout_marginTop="0dp"
                        android:layout_marginLeft="10dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:src="@drawable/ratestarb">
                    </ImageView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="제품 별점"
                        android:textColor="@color/black"
                        android:fontFamily="@font/nanumsquareroundb"
                        android:layout_gravity="center"
                        android:layout_marginTop="0dp"
                        android:layout_marginLeft="5dp"/>
                    <TextView
                        android:id="@+id/fg3_pdrb_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="점수"
                        android:textColor="@color/black"
                        android:fontFamily="@font/nanumsquareroundeb"
                        android:layout_marginTop="0dp"
                        android:layout_marginLeft="10dp"/>

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#D8D8D8">
    </LinearLayout>
</LinearLayout>