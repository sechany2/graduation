<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/TextView1"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:text="설문"
        android:fontFamily="@font/nanumsquareroundeb"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/TextView2"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:gravity="center"
        android:text="관심있는 분야"
        android:fontFamily="@font/nanumsquareroundeb"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TextView1" />

    <androidx.appcompat.widget.AppCompatButton
        android:drawableLeft="@drawable/ic_baseline_directions_walk_24"
        android:background="@drawable/bin_red2"
        android:id="@+id/sc_btn_health"
        android:layout_width="400dp"
        android:layout_height="100dp"
        android:text="건강"
        android:fontFamily="@font/nanumsquareroundb"
        android:textSize="30dp"
        android:textColor="#ffffff"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TextView2" />

    <androidx.appcompat.widget.AppCompatButton
        android:drawableLeft="@drawable/ic_baseline_directions_run_24"
        android:layout_marginTop="30dp"
        android:background="@drawable/bin_red2"
        android:id="@+id/sv_btn_diet"
        android:layout_width="400dp"
        android:layout_height="100dp"
        android:text="다이어트"
        android:fontFamily="@font/nanumsquareroundb"
        android:textSize="30dp"
        android:textColor="#ffffff"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sc_btn_health" />

    <androidx.appcompat.widget.AppCompatButton
        android:drawableLeft="@drawable/ic_baseline_fitness_center_24"
        android:layout_marginTop="30dp"
        android:background="@drawable/bin_red2"
        android:id="@+id/sv_btn_ex"
        android:layout_width="400dp"
        android:layout_height="100dp"
        android:text="운동능력 향상"
        android:fontFamily="@font/nanumsquareroundb"
        android:textSize="30dp"
        android:textColor="#ffffff"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sv_btn_diet" />


</androidx.constraintlayout.widget.ConstraintLayout>