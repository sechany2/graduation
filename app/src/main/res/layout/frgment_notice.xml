<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TextView
            android:id="@+id/tv_notice1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:text="○ 헬푸유 운영진 에서 알려드립니다."
            android:textSize="20dp"
            android:textColor="@color/black"
            android:fontFamily="@font/nanumsquareroundeb"/>

        <TextView
            android:id="@+id/tv_notice1_as"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:textSize="15dp"
            android:text="많은 관심과 참여 부탁드립니다. 감사합니다."
            android:visibility="gone"/>
        <TextView
            android:id="@+id/tv_notice2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:text="○ 2022-08-31 업데이트 공지사항"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:fontFamily="@font/nanumsquareroundeb"/>

        <TextView
            android:id="@+id/tv_notice2_as"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:textSize="15dp"
            android:text="도움말과 공지사항을 추가 하였습니다. 기본이미지를 변경 할 수 있게 업데이트 준비 중 입니다."
            android:visibility="gone"/>
    </LinearLayout>
</FrameLayout>