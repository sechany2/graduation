<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingRight="10dp"
    android:paddingLeft="10dp"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:layout_margin="5dp"

    android:background="@drawable/square_background_border_gray"
    >

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_rq_category"
        android:text="유형"
        android:fontFamily="@font/nanumsquareroundb"
        android:textSize="14dp"
        android:textColor="#808080" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_rq_date"
            android:text="XXXX-XX-XX"
            android:layout_gravity="right"
            android:fontFamily="@font/nanumsquareroundb"
            android:textSize="14dp"
            android:textColor="#878787" />
    </LinearLayout>

</LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_rq_name"
        android:text="이름"
        android:fontFamily="@font/nanumsquareroundb"
        android:textSize="14dp"
        android:layout_marginBottom="20dp"
        android:textColor="#818181" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_rq_title"
        android:fontFamily="@font/nanumsquareroundb"
        android:text="문의 제목"
        android:textSize="18dp"
        android:textColor="#000000" />



    <EditText
        android:id="@+id/tv_rq_contents"
        android:layout_width="379dp"
        android:layout_height="wrap_content"
        android:enabled="false"
        android:ems="10"
        android:fontFamily="@font/nanumsquareroundb"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        android:text="문의 내용"
        android:textColor="#000000"
        android:textSize="14dp" />
    <LinearLayout
        android:id="@+id/answer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        >


    <EditText
        android:id="@+id/tv_rq_answer"
        android:layout_width="379dp"
        android:layout_height="70dp"
        android:enabled="false"
        android:ems="10"
        android:textColor="#F44336"
        android:gravity="start|top"
        android:inputType="textMultiLine" />
    <Button
        android:id="@+id/answer_btn"
        android:layout_gravity="right"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:text="답변하기" />
    </LinearLayout>



</LinearLayout>